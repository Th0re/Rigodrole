def make_player(controller, position, sprite):
   return make_entity({
      pos: position,
      scale: xy(50%, 50%),
      override_color: rgb(0.5, 0.0, 1.0),
      sprite: sprite,
      acc: xy(0, 0.1),
      vel: xy(0, -5),
      controller: controller
  })