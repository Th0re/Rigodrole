draw_text(font, format_number(scoreP2, "000000"), xy(SCREEN_SIZE.x*3/4, SCREEN_SIZE.y*7/8), TEXT_COLOR)

if (safeTime <= 0):
   for gamepad in gamepad_array:
      if any_button_press(gamepad):
         pop_mode()
safeTime -= DT

