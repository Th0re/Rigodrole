let upperPos = xy(SCREEN_SIZE.x/2, SCREEN_SIZE.y/4)
if abs(scoreP1 - scoreP2) < 1:
   draw_sprite(drawing_sprite, upperPos)
else if scoreP1 > scoreP2:
   draw_sprite(player_1_winned_sprite, upperPos)
else:
